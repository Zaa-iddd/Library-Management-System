<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <!-- Top Decorative Wave -->
    <View
        android:id="@+id/top_wave"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/wave"
        android:animation="@anim/top_animation"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_media_previous"
        android:padding="6dp"

        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Profile Image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:cardCornerRadius="55dp"
        app:cardElevation="8dp"
        android:animation="@anim/middle_animation"
        app:layout_constraintTop_toBottomOf="@id/top_wave"
        android:layout_marginTop="-55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_book" />
    </androidx.cardview.widget.CardView>

    <!-- Username -->
    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laurence Gomez"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email -->
    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="laurencegomez@example.com"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/usernameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Edit Profile -->
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="Edit Profile"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/emailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- View Favorites Button -->
    <Button
        android:id="@+id/viewFavoritesButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="View Favorites"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/editProfileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="Logout"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:backgroundTint="#FF5252"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/viewFavoritesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>