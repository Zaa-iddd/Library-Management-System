<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#F7F5F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/userInput"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_corner_textfield"
        android:hint="Username "
        android:padding="12dp"
        android:textColorHint="#6A6A6A"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passInput"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/passInput"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354" />

    <EditText
        android:id="@+id/passInput"

        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_corner_textfield"
        android:hint="Password: "
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColorHint="#6A6A6A"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInput"
        app:layout_constraintVertical_bias="0.085"

        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner_textfield"
        android:text="Login"
        android:textSize="18sp"
        app:backgroundTint="#FD7C43"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passInput"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/passInput"
        app:layout_constraintTop_toBottomOf="@+id/passInput"
        app:layout_constraintVertical_bias="0.095" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton3"
        android:layout_width="86dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shadow"
        android:outlineAmbientShadowColor="@color/black"
        android:shadowColor="@color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        app:backgroundTint="@null"
        app:cornerRadius="12dp"
        app:icon="@drawable/google_logo"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passInput"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="@+id/passInput"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.219" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton4"
        android:layout_width="86dp"
        android:layout_height="80dp"
        android:background="@drawable/button_shadow"
        android:outlineAmbientShadowColor="@color/black"
        android:shadowColor="@color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        app:backgroundTint="@null"
        app:cornerRadius="12dp"
        app:icon="@drawable/facebook_logo"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passInput"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toEndOf="@+id/loginButton3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.219" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_button"
        android:layout_width="321dp"
        android:layout_height="51dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Create Account"
        android:textColor="#FD7C43"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:layout_constraintVertical_bias="0.105"
        app:strokeColor="#FD7C43"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Account"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/userInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reado"
        android:textColor="#FD7C43"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or login with"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_button"
        app:layout_constraintVertical_bias="0.19" />


</androidx.constraintlayout.widget.ConstraintLayout>
