<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- Top wave -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/wave"
        android:animation="@anim/top_animation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READo"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:animation="@anim/top_animation"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back! Login to your account"
        android:textColor="#AB3E52"
        android:textSize="20sp"
        android:animation="@anim/middle_animation"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Username field -->
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:hint="Enter username"
        android:padding="12dp"
        android:background="@drawable/border_button"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:animation="@anim/middle_animation"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password field -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:hint="Enter password"
        android:padding="12dp"
        android:background="@drawable/border_button"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:animation="@anim/middle_animation"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="320dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:backgroundTint="@null"
        android:text="Login"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:animation="@anim/bottom_animation"
        app:backgroundTint="#AB3E52"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Signup redirect -->
    <TextView
        android:id="@+id/noAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Sign Up"
        android:textColor="#8E8E8E"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:animation="@anim/bottom_animation"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
